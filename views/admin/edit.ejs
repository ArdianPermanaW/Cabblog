<h1>edit Article</h1>
<form id="addArticleForm" action="/admin/articles" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= article.title %>" required>
  <br>
  <label for="content">Content:</label>
  <textarea name="content" id="content" required><%= article.content %></textarea>
  <br>
  <label for="date">Publication Date:</label>
  <input type="date" name="date" id="date" value="<%= article.date %>" required>
  <br>
  <button type="submit">edit Article</button>
</form>
